{
    "env": {
        "commonjs": true,
		"es6": true,
		"mocha": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
		"consistent-return": [
			"error",
			{ 
				"treatUndefinedAsUnspecified": true 
			}
		],
		"curly": [
			"error",
			"multi"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-case-declarations": [
			"error"
		],
		"no-fallthrough": [
			"error"
		],
		"no-var": [
			"error"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"switch-colon-spacing": [
			"error",
			{
				"after": true,
				"before": false
			}
		]
	}
}